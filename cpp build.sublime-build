		},
		{ 
		 "name": "icrun", 
		 "shell_cmd": "start cmd /c \"title \"${file_base_name}.exe\" -icrun & COLOR 0B & echo -[Sublime Text 3 C++ Build Script By]-  & echo ------------[Shanto Noor!]------------ & echo -------------[Compiling!]------------- & echo. & g++ -std=c++17 -Wshadow -Wall \"${file}\" -o \"${file_base_name}.exe\" -O2 -Wno-unused-result && (echo ---------------[Start!]--------------- & title \"${file_base_name}.exe\" & echo. & runtime.exe \"${file_base_name}.exe\" < input.txt & del \"${file_base_name}.exe\") || (echo ----------------[End!]---------------- & echo ---------[Compile Time ERROR]--------- & echo. & pause)\""
		},
