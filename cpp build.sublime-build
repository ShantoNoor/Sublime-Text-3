	 		"g++", 
			"-std=c++17",
            "-Wshadow",
            "-Wall",
            "${file}",
            "-o",
            "${file_base_name}.exe",
            "-O2",
            "-Wno-unused-result"
	   ],
	"shell":true,
	"working_dir":"$file_path",
	"selector":"source.c, source.cpp, source.cxx",

	"variants": [
